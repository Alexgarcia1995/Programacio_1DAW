public class Main_Dummies {
	
	
	public static void main(String[] args) {
		int men = 0, men1 = 0;
		int menprin=0;
		
		do{
			Settings.GetInstance();
			if (Settings.GetInstance().dummies==false){
				Main_Framework2.main(null);
			}
